@page "/micro-controller-derivatives"

<PageTitle>MicroControllerDerivatives</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="MicroControllerDerivatives" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@microControllerDerivatives" LoadData="@Grid0LoadData" Count="@count" TItem="HardwareManagement.Server.Models.FocusDB.MicroControllerDerivative" RowDoubleClick="@EditRow">
            <Columns>
 @*                <RadzenDataGridColumn TItem="HardwareManagement.Server.Models.FocusDB.MicroControllerDerivative" Property="MicroControllerDerivativesID" Title="Micro Controller Derivatives I D">
                </RadzenDataGridColumn> *@
                <RadzenDataGridColumn TItem="HardwareManagement.Server.Models.FocusDB.MicroControllerDerivative" Property="MicroControllerDerivativesName" Title="Micro Controller Derivatives Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HardwareManagement.Server.Models.FocusDB.MicroControllerDerivative" Property="SiliconVendor.SiliconVendorName" Title="Silicon Vendor">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="HardwareManagement.Server.Models.FocusDB.MicroControllerDerivative" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="microControllerDerivative">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, microControllerDerivative)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
